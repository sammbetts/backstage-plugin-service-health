{
  "name": "root",
  "version": "0.1.0",
  "engines": {
    "node": "16 || 18"
  },
  "license": "Apache-2.0",
  "private": true,
  "scripts": {
    "dev": "concurrently \"yarn start\" \"yarn start-backend\"",
    "start": "yarn workspace @sammbetts/backstage-plugin-service-health-dashboard start",
    "start-backend": "yarn workspace @sammbetts/backstage-plugin-service-health-backend start",
    "build": "backstage-cli package build",
    "build:all": "backstage-cli repo build --all",
    "tsc": "tsc",
    "lint": "backstage-cli package lint",
    "test": "backstage-cli package test",
    "clean": "backstage-cli package clean",
    "prepack": "backstage-cli package prepack",
    "postpack": "backstage-cli package postpack"
  },
  "workspaces": {
    "packages": [
      "plugins/service-health-backend/*",
      "plugins/service-health-dashboard/*"
    ]
  },
  "devDependencies": {
    "@backstage/cli": "^0.22.9",
    "@backstage/core-app-api": "^1.9.0",
    "@backstage/dev-utils": "^1.0.17",
    "@backstage/test-utils": "^1.4.1",
    "@testing-library/jest-dom": "^5.10.1",
    "@testing-library/react": "^12.1.3",
    "@testing-library/user-event": "^14.0.0",
    "@spotify/prettier-config": "^15.0.0",
    "concurrently": "^6.0.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^8.8.0",
    "react": "^16.13.1 || ^18.0.0",
    "react-use": "^17.4.0",
    "react-dom": "^16.13.1 || ^18.0.0",
    "react-router": "^6.3.0",
    "react-router-dom": "^6.3.0",
    "typescript": "^5.0.0"
  },
  "resolutions": {
    "@types/react": "^18",
    "@types/react-dom": "^18"
  },
  "packageManager": "yarn@3.2.4",
  "prettier": "@spotify/prettier-config",
  "lint-staged": {
    "*.{js,jsx,ts,tsx,mjs,cjs}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
